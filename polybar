[colours]
background = #34444D
foreground = #FFFFFF

[module/date]
type = internal/date
interval = 1.0
date = %A %d %B, %Y

[module/time]
type = internal/date
interval = 1.0
date = %H:%M

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 1
time-format = %H:%M
label-charging = Battery charging %percentage%%
label-discharging = Battery discharging %percentage%% %time%
label-full = Battery charged

[module/volume]
type = internal/pulseaudio
interval = 5
reverse-scroll = true
label-volume = Volume %percentage%%
label-muted = Muted

[module/brightness]
type = internal/backlight
use-actual-brightness = true
label = Brightness %percentage%%

[module/wifi]
type = internal/network
interface-type = wireless
label-connected = Connected to <%essid%>
label-disconnected = No WiFi connection

[bar/top]
width = 100%
height = 24pt
padding = 16pt
module-margin = 8pt
separator = |
background = ${colours.background}
foreground = ${colours.foreground}
font-0 = IBM Plex Serif:size=11
modules-left = wifi
modules-center = date time
modules-right = volume brightness battery
